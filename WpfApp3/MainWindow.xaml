<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="window_Loaded">
    <Grid>
        <DataGrid Name="dgExp" Width="800" Margin="0,0,0,207" />

        <Label Content="Name:" FontSize="20" Margin="10,232,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Name="txtName" FontSize="20" Margin="100,232,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200"/>

        <Label Content="Title:" FontSize="20" Margin="10,282,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Name="txtTitle" FontSize="20" Margin="100,282,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200"/>

        <Label Content="Department:" FontSize="20" Margin="0,234,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox Name="txtDepartment" FontSize="20" Margin="499,238,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200"/>

        <Label Content="Amount:" FontSize="20" Margin="0,282,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox Name="txtAmount" FontSize="20" Margin="499,282,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200"/>
        
        <Label Content="Notes:" FontSize="20" Margin="10,316,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox Name="txtNotes" FontSize="20" Margin="150,320,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200"/>

        <Button Content="Add" FontSize="20" Margin="104,373,592,10" Click="AddButton_Click"/>
        <Button Content="Update" FontSize="20" Margin="246,373,450,10" Click="UpdateButton_Click" />
        <Button Content="Delete" FontSize="20" Margin="547,373,149,10" Click="DeleteButton_Click" />
        <Button Content="Refresh" FontSize="20" Margin="400,373,296,10" Click="RefreshButton_Click" />

    </Grid>
</Window>
