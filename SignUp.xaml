<Page x:Class="Library_mangment.SignUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_mangment"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignUp">

    <Grid Background="White">
        <StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,20">
                <Label Content="Library Management System" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,20"/>
                <Image Source="C:\Users\basel.muhammed\source\repos\Library_mangment\images\7084.jpg" Width="50" Height="60"/>
            </StackPanel>
            <Label Content="Full Name:" FontWeight="Bold" FontSize="15" Width="90" Height="39"/>
            <TextBox x:Name="txtfullname" Height="27" Width="260"/>

            <Label Content="Email" FontWeight="Bold" FontSize="15"  Width="90"/>
            <TextBox Name="txtemail" Height="27" Width="260"/>

            <Label Content="Password:" FontWeight="Bold" FontSize="15" Width="90"/>
            <PasswordBox Name="txtpass" Height="27" Width="260"/>

            <Label Content="Confirm Password:" FontWeight="Bold" FontSize="15"  Width="150"/>
            <PasswordBox Name="txtconfpass" Height="27" Width="260"/>

            <Label Content="Role:" FontWeight="Bold" FontSize="15" Width="60"/>
            <StackPanel Orientation="Horizontal">
                <RadioButton Content="Member" x:Name="Member" GroupName="Role" Width="200" Height="31"/>
                <RadioButton Content="Librarian" x:Name="Librarian" GroupName="Role" Width="200" Height="31" />
                <Button Name="btnback" Content="If Already have account?" Background="white" BorderThickness="0" FontSize="15" FontWeight="Bold" Click="back_Click"/>
            </StackPanel>
            <Button Name="btnsignup" Content="Sign Up" FontSize="15" FontWeight="Bold" Width="300" Click="signup_Click"/>
        </StackPanel>

    </Grid>
</Page>
