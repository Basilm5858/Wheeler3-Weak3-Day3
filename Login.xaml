<Page x:Class="Library_mangment.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_mangment"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Login">

    <Grid Background="White">
        <StackPanel>
            <Label Content="Login Page" FontSize="25" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,20"/>
            
            <Label Content="Email" FontWeight="Bold" FontSize="15"  Width="550"/>
            <TextBox Name="txtemail" Height="27" Width="555"/>

            <Label Content="Password:" FontWeight="Bold" FontSize="15" Width="550"/>
            <PasswordBox Name="txtpass" Height="27" Width="555"/>

            <Button Name="btnlogin" Content="Login" FontSize="15" FontWeight="Bold" Width="300" Height="30"  Margin="0,20,0,0" Click="login_Click"/>
        </StackPanel>
    </Grid>
</Page>
